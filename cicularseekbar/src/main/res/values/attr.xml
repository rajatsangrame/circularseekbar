<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseSeekbar">

        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="thumbColor" format="color" />


        <attr name="thickness" format="dimension" />
        <attr name="thumbRadius" format="dimension" />
        <attr name="thumbPadding" format="dimension" />

        <attr name="showThumb" format="boolean" />
        <attr name="enableTouch" format="boolean" />

        <attr name="progress" format="float" />
    </declare-styleable>

    <declare-styleable name="CircularSeekbar">
        <attr name="startAngle" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>
</resources>