<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KotlinSampleActivity">

    <com.rajatsangrame.circularseekbar.CircularSeekbar
        android:id="@+id/circularseekbar"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="24dp"
        app:backgroundColor="@android:color/holo_purple"
        app:enableTouch="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progress="22"
        app:progressColor="@android:color/holo_orange_dark"
        app:showThumb="true"
        app:startAngle="top"
        app:thickness="20dp"
        app:thumbColor="@android:color/holo_blue_bright"
        app:thumbPadding="4dp"
        app:thumbRadius="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Java Sample"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circularseekbar" />

</androidx.constraintlayout.widget.ConstraintLayout>